
{
    "manifest_version": 3,
    "name": "OpenPocket MVP",
    "version": "0.1.0",
    "description": "Save web pages to read later, similar to Pocket.",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "contextMenus",
      "notifications"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }